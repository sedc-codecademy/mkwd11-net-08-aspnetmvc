@model List<SizeViewModel>
@{
    //Set the name that appears in the tab on the browser
    // This is configurated in the _Layout <title>
    ViewData["Title"] = "Filtered Sizes";
}

<h1>Filtered Sizes</h1>
<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <th>@Model[i].Name</th>
                <th>@Model[i].Description</th>
            </tr>
        }
    </tbody>
</table>