@using SEDC.PizzaApp.Data.Enums
@model OrderDTO

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>OrderDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label for="FullName" class="control-label">Ordered by</label>
                <input asp-for="FullName" disabled class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PizzaCount" class="control-label"></label>
                <input asp-for="PizzaCount" disabled class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PaymentMethod" class="control-label"></label>
                <select asp-for="PaymentMethod" asp-items="Html.GetEnumSelectList<PaymentMethod>()">
                </select>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
