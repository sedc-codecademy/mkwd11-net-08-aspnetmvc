@model List<PizzaListViewModel>

<h2>List of pizzas:</h2>
<br />
<div class="card-container">
    @foreach (var pizza in @Model)
    {
        <partial name="~/Views/Shared/Partials/_PizzaCardPartial.cshtml" for="@pizza" />
    }
</div>
<br />
<a class="btn btn-warning" asp-area="" asp-controller="Home" asp-action="Index">Home page</a>
<a class="btn btn-warning" asp-area="" asp-controller="Pizza" asp-action="Create">Create new pizza</a>